<!doctype html>

<html lang="en">
<head>
    {{>header}}
</head>

<body>

<!-- MENU SHADOW -->
<div id="menu-shadow"></div>

<!--LOADING SPINNER -->
<div id="menu-loading-overlay">
    <div id="loading-icon-container" class="center-xy">
        <div class="sk-rotating-plane"></div>
    </div>
</div>

<!-- GRADIENT MENU CONTAINER -->
<svg id="menu-container" width="50%" height="70%">
    <mask x='0' y='0' id="menu-mask-injection">
        {{>menuMask}}
    </mask>
    <defs>
        <linearGradient id="gradient" gradientUnits="userSpaceOnUse" x1="21.560574948665298%" y1="18.21428571428571%" x2="100%" y2="100%">
            <stop stop-color="#33333B" offset="0"></stop>
            <stop stop-color="#171e29" offset="1"></stop>
        </linearGradient>
    </defs>
    <rect y='0' x='0' width="100%" height='100%' mask="url(#menu-mask-injection)" fill="url(#gradient)">
    </rect>
</svg>

<!-- PAGE CONTROLS -->
<div id="page-control"></div>

<!-- STATUS BAR -->
<div id="status-bar">
    <div id="page-title" class="center-xy no-select">ASSISTIVE GRASPING</div>
        <img id="settings-button" class="no-select settings-icon center-y" src="/_assets/img/settings@3x.png">
    </div>
</div>

<!-- CAMERA VIEWPORT -->
<div id="camera-container">
    {{>settings}}
</div>

<!-- MENU BUTTONS -->
<div id="menu-injection"></div>

</body>
</html>
